# Postgres
PGHOST=localhost
PGPORT=5432
PGDATABASE=rag
PGUSER=postgres
PGPASSWORD=postgres

# OpenRouter
OPENROUTER_API_KEY=your_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free

# Embeddings & Reranker
EMBED_MODEL=BAAI/bge-small-en
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKER_ENABLED=true

# Retrieval knobs
DENSE_TOP_K=20
BM25_TOP_K=20
RERANK_TOP_K=5
CHUNK_TOKENS=250
CHUNK_OVERLAP=0.15
MAX_NEW_TOKENS=300
TEMPERATURE=0.2
